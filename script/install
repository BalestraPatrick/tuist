#!/bin/bash

URL=$( curl -s "https://api.github.com/repos/tuist/tuist/releases/latest" \
   | jq -r '.assets[] | select(.name=="tuistenv") | .browser_download_url' )
if [ "$URL" != "" ]; then
  echo "Downloading tuist from $URL"
else
  echo "Couldn't find tuistenv on the latest release"
  exit 1
fi

curl "$URL" > /usr/local/bin/tuist
chmod +x /usr/local/bin/tuist